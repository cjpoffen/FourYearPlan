@{
    ViewBag.Title = "EditPlan";
}

<h2>EditPlan</h2>

<form method="POST" name="theForm">
    <table bgcolor="white" border="1" cellpadding="5" cellspacing="2" align="center">
        <tr>
            <td align="center">
                <div>
                    <label >Semester One</label>
                    <select name=FistSemester size=10 multiple>
                        @foreach (var c in ViewBag.FistSemester)
                        {
                            <option>@c</option>
                        }
                    </select><br />
                    <p align="center"><input type="button" onclick="transfer(1,2)" value=" >> "></p>
                </div>
            </td>
            <td align="center">
                <div>
                    <label>Semester Two</label>
                    <select name=SecondSemester size=10 multiple>
                        @foreach (var c in ViewBag.SecondSemester)
